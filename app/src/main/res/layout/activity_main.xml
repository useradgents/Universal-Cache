<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/collectorName1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_1"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginVertical="8dp"
        android:background="@color/color_1"
        android:gravity="center_vertical"
        android:paddingHorizontal="4dp"
        android:text="Hello World!"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/collectorName1"
        app:layout_constraintTop_toTopOf="parent" />


    <Spinner
        android:id="@+id/collectorName2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/collectorName1" />

    <TextView
        android:id="@+id/textView_2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginVertical="8dp"
        android:background="@color/color_2"
        android:gravity="center_vertical"
        android:paddingHorizontal="4dp"
        android:text="Hello World!"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/collectorName2"
        app:layout_constraintTop_toBottomOf="@id/textView_1" />


    <Spinner
        android:id="@+id/collectorName3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/collectorName2" />

    <TextView
        android:id="@+id/textView_3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginVertical="8dp"
        android:background="@color/color_3"
        android:gravity="center_vertical"
        android:paddingHorizontal="4dp"
        android:text="Hello World!"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/collectorName3"
        app:layout_constraintTop_toBottomOf="@id/textView_2" />

    <Button
        android:id="@+id/download_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_1"
        android:text="Update"
        app:layout_constraintBottom_toTopOf="@id/download_2" />

    <Button
        android:id="@+id/download_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_2"
        android:text="Update"
        app:layout_constraintBottom_toTopOf="@id/download_3" />

    <Button
        android:id="@+id/download_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_3"
        android:text="Update"
        app:layout_constraintBottom_toTopOf="@id/clearCache" />

    <Button
        android:id="@+id/clearCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear cache"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>